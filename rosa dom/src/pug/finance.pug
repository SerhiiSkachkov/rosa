        script.
            $(function(){
                var datepicker_shown_from = false;
                var datepicker_shown_to = false;
                $('.js-toggle-calendar-from').on('click', function(e){
                    if(datepicker_shown_from) {
                        $('.js-calendar-from').datepicker({ orientation: 'bottom right'});
                        $('.js-calendar-from').datepicker('show');
                    } else {
                        $('.js-calendar-from').datepicker({ orientation: 'bottom right'});
                        $('.js-calendar-from').datepicker('hide');
                    }
                    datepicker_shown_from = !datepicker_shown_from;
                    return false;
                });
                $('.js-toggle-calendar-to').on('click', function(e){
                        if(datepicker_shown_to) {
                            $('.js-calendar-to').datepicker({ orientation: 'bottom right'});
                            $('.js-calendar-to').datepicker('show');
                        } else {
                            $('.js-calendar-to').datepicker({ orientation: 'bottom right'});
                            $('.js-calendar-to').datepicker('hide');
                        }
                        datepicker_shown_to = !datepicker_shown_to;
                        return false;
                    });
                })
